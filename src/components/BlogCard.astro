---
interface Props {
    title: string;
    date: Date;
    slug: string;
    tags?: string[];
}

const { title, date, slug, tags = [] } = Astro.props;
---

<a
    href={`/portfolio/blog/${slug}`}
    class="group block relative pl-8 border-l-2 border-dark-border hover:border-neon-amber transition-colors duration-300 py-2"
>
    <div
        class="absolute left-[-5px] top-1/2 -translate-y-1/2 w-2 h-2 bg-dark-border rounded-full group-hover:bg-neon-amber transition-colors duration-300"
    >
    </div>

    <div
        class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-2"
    >
        <h3
            class="text-xl font-bold text-text-main group-hover:text-neon-amber transition-colors"
        >
            {title}
        </h3>
        <div
            class="flex items-center text-sm text-text-muted font-mono shrink-0"
        >
            <time datetime={date.toISOString()}>
                {
                    date.toLocaleDateString("en-US", {
                        year: "numeric",
                        month: "short",
                        day: "numeric",
                    })
                }
            </time>
            {
                tags.length > 0 && (
                    <>
                        <span class="mx-2 text-dark-border">/</span>
                        <span class="text-neon-amber/80">#{tags[0]}</span>
                    </>
                )
            }
        </div>
    </div>
</a>
