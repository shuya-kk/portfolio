---
interface Props {
    title: string;
    date: Date;
    slug: string;
    tags?: string[];
}

const { title, date, slug, tags = [] } = Astro.props;
---

<a
    href={`/portfolio/blog/${slug}`}
    class="group block relative zen-panel zen-hover p-8 md:p-10 transition-all duration-500"
>
    <div
        class="relative z-10 flex flex-col md:flex-row md:items-center md:justify-between gap-6"
    >
        <div class="flex-grow">
            <h3
                class="text-xl md:text-2xl font-light text-zen-ink serif-heading italic group-hover:opacity-70 transition-opacity"
            >
                {title}
            </h3>
        </div>

        <div
            class="flex items-center text-[10px] text-zen-dim shrink-0 tracking-[0.2em] font-medium serif-sub"
        >
            <time datetime={date.toISOString()}>
                {
                    date
                        .toLocaleDateString("ja-JP", {
                            year: "numeric",
                            month: "2-digit",
                            day: "2-digit",
                        })
                        .replace(/\//g, " . ")
                }
            </time>
            {
                tags.length > 0 && (
                    <>
                        <span class="mx-4 opacity-10">|</span>
                        <span class="text-zen-dim/60">{tags[0]}</span>
                    </>
                )
            }
        </div>
    </div>
</a>
