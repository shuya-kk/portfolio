---
interface Props {
    title: string;
    date: Date;
    slug: string;
    tags?: string[];
}

const { title, date, slug, tags = [] } = Astro.props;
---

<a
    href={`/portfolio/blog/${slug}`}
    class="group block p-8 bg-surface transition-all duration-500 hover:shadow-2xl hover:shadow-accent/5 relative z-10 first:rounded-t-[2rem] last:rounded-b-[2rem] hover:z-20 border-b border-border last:border-0"
>
    <div
        class="flex flex-col md:flex-row md:items-center justify-between gap-6"
    >
        <div class="flex flex-col gap-3">
            <time
                datetime={date.toISOString()}
                class="text-[11px] text-secondary font-bold tracking-[0.2em] font-mono opacity-50 uppercase"
            >
                {
                    date
                        .toLocaleDateString("ja-JP", {
                            year: "numeric",
                            month: "2-digit",
                            day: "2-digit",
                        })
                        .replace(/\//g, ".")
                }
            </time>
            <h3
                class="text-xl md:text-2xl font-black text-primary group-hover:text-accent transition-colors leading-tight tracking-[-0.05em]"
            >
                {title}
            </h3>
        </div>

        {
            tags && (
                <div class="flex flex-wrap gap-2 pt-2 md:pt-0">
                    {tags.map((tag) => (
                        <span class="text-[10px] font-bold px-3 py-1 bg-background/50 text-secondary rounded-full border border-border group-hover:border-accent group-hover:text-accent transition-all whitespace-nowrap uppercase tracking-wider">
                            #{tag}
                        </span>
                    ))}
                </div>
            )
        }
    </div>
</a>
