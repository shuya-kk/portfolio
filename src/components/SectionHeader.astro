---
interface Props {
    title: string;
    subtitle?: string;
    align?: "left" | "center";
}

const { title, subtitle, align = "left" } = Astro.props;
---

<div class={`mb-12 ${align === "center" ? "text-center" : "text-left"}`}>
    {
        subtitle && (
            <span class="inline-block py-1 px-3 rounded-full bg-neon-amber/10 text-neon-amber text-xs font-bold tracking-wider mb-4 border border-neon-amber/20 uppercase">
                {subtitle}
            </span>
        )
    }
    <h2
        class="text-4xl md:text-5xl font-black text-white tracking-tight leading-tight"
    >
        <span
            class="bg-clip-text text-transparent bg-gradient-to-r from-white to-white/60"
        >
            {title}
        </span>
    </h2>
    <div
        class={`h-1 w-20 bg-neon-amber mt-6 rounded-full ${align === "center" ? "mx-auto" : ""}`}
    >
    </div>
</div>
