---
interface Props {
    title: string;
    subtitle?: string;
    align?: "left" | "center";
}

const { title, subtitle, align = "left" } = Astro.props;
---

<div class={`mb-16 ${align === "center" ? "text-center" : "text-left"}`}>
    {
        subtitle && (
            <span class="inline-block text-wafu-accent text-sm font-bold tracking-[0.2em] mb-3 font-serif uppercase">
                {subtitle}
            </span>
        )
    }
    <h2
        class="text-3xl md:text-4xl font-bold text-wafu-text tracking-widest leading-relaxed font-serif"
    >
        {title}
    </h2>
    <div
        class={`h-px w-12 bg-wafu-text/20 mt-6 ${align === "center" ? "mx-auto" : ""}`}
    >
    </div>
</div>
