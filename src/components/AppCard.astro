---
interface Props {
    name: string;
    description: string;
    iconUrl: string;
    appStoreUrl: string;
    features?: string[];
    isFeatured?: boolean;
}

const {
    name,
    description,
    iconUrl,
    appStoreUrl,
    features = [],
    isFeatured = false,
} = Astro.props;
---

<a
    href={appStoreUrl}
    target="_blank"
    class={`group relative block p-8 rounded-sm transition-all duration-500 hover:-translate-y-1 ${isFeatured ? "md:col-span-2 md:row-span-2" : ""} wafu-card`}
>
    <div class="relative z-10 flex flex-col h-full">
        <div class="flex items-start justify-between mb-6">
            <img
                src={iconUrl}
                alt={`${name} icon`}
                class={`rounded-[1.2rem] shadow-sm group-hover:shadow-md transition-all duration-500 ${isFeatured ? "w-24 h-24" : "w-16 h-16"}`}
                onerror="this.src='https://placehold.co/64x64/f0f0f0/cccccc?text=APP';"
            />
            <div
                class="text-wafu-text/20 group-hover:text-wafu-accent transition-colors duration-300"
            >
                <svg
                    class="w-5 h-5"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                    ><path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M14 5l7 7m0 0l-7 7m7-7H3"></path></svg
                >
            </div>
        </div>

        <h3
            class={`font-bold font-serif text-wafu-text mb-3 group-hover:text-wafu-accent transition-colors ${isFeatured ? "text-2xl" : "text-lg"} tracking-wide`}
        >
            {name}
        </h3>

        <p
            class="text-wafu-text-muted text-sm leading-7 mb-6 line-clamp-3 flex-grow font-sans tracking-wide"
        >
            {description}
        </p>

        {
            features.length > 0 && (
                <div class="flex flex-wrap gap-2 mt-auto">
                    {features.slice(0, isFeatured ? 4 : 2).map((feature) => (
                        <span class="text-xs font-medium px-2 py-1 bg-wafu-bg text-wafu-text-muted border border-wafu-text/10 font-sans tracking-wider">
                            {feature}
                        </span>
                    ))}
                </div>
            )
        }
    </div>
</a>
