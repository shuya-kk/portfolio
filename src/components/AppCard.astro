---
interface Props {
    name: string;
    description: string;
    iconUrl: string;
    appStoreUrl: string;
    features?: string[];
    isFeatured?: boolean;
}

const {
    name,
    description,
    iconUrl,
    appStoreUrl,
    features = [],
    isFeatured = false,
} = Astro.props;
---

<a
    href={appStoreUrl}
    target="_blank"
    class={`group relative block p-6 rounded-2xl transition-all duration-500 hover:-translate-y-2 ${isFeatured ? "md:col-span-2 md:row-span-2 bg-gradient-to-br from-white/5 to-white/0 border border-white/10" : "bg-dark-surface border border-dark-border"} hover:border-neon-amber/50 hover:shadow-[0_0_30px_rgba(245,158,11,0.15)] overflow-hidden`}
>
    <!-- Glow Effect -->
    <div
        class="absolute inset-0 bg-radial-glow opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none"
    >
    </div>

    <div class="relative z-10 flex flex-col h-full">
        <div class="flex items-start justify-between mb-4">
            <img
                src={iconUrl}
                alt={`${name} icon`}
                class={`rounded-xl shadow-lg group-hover:shadow-neon-amber/20 transition-all duration-500 ${isFeatured ? "w-20 h-20" : "w-16 h-16"}`}
                onerror="this.src='https://placehold.co/64x64/262626/e5e5e5?text=APP';"
            />
            <div
                class="p-2 rounded-full bg-white/5 text-neon-amber group-hover:bg-neon-amber group-hover:text-white transition-colors duration-300"
            >
                <svg
                    class="w-5 h-5"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                    ><path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M14 5l7 7m0 0l-7 7m7-7H3"></path></svg
                >
            </div>
        </div>

        <h3
            class={`font-bold text-text-main mb-2 group-hover:text-neon-amber transition-colors ${isFeatured ? "text-3xl" : "text-xl"}`}
        >
            {name}
        </h3>

        <p
            class="text-text-muted text-sm leading-relaxed mb-4 line-clamp-3 flex-grow"
        >
            {description}
        </p>

        {
            features.length > 0 && (
                <div class="flex flex-wrap gap-2 mt-auto">
                    {features.slice(0, isFeatured ? 4 : 2).map((feature) => (
                        <span class="text-xs font-medium px-2 py-1 rounded-md bg-neon-amber/10 text-neon-amber border border-neon-amber/20">
                            {feature}
                        </span>
                    ))}
                </div>
            )
        }
    </div>
</a>
