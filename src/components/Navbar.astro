---
const links = [
    { name: "制作物", href: "/portfolio/#apps" },
    { name: "記録", href: "/portfolio/blog" },
    { name: "私について", href: "/portfolio/#about" },
];
---

<header
    class="fixed top-0 right-0 h-screen z-50 w-20 hidden md:flex flex-col items-center justify-between py-16 bg-white/60 backdrop-blur-xl border-l border-zen-border"
>
    <!-- Artisan Mark -->
    <a href="/portfolio/" class="group relative py-4">
        <div
            class="text-[10px] font-black tracking-[0.2em] text-zen-ink sig-mark"
        >
            S.H.
        </div>
    </a>

    <!-- Vertical Navigation -->
    <nav class="vertical-rl flex items-center gap-16">
        {
            links.map((link) => (
                <a
                    href={link.href}
                    class="text-[11px] font-bold tracking-[0.6em] text-zen-dim hover:text-zen-gold transition-all duration-700 relative group py-6"
                >
                    {link.name}
                    <span class="absolute right-0 top-1/2 -translate-y-1/2 h-0 w-[1px] bg-zen-gold group-hover:h-8 transition-all duration-700" />
                </a>
            ))
        }
    </nav>

    <!-- Sentiment -->
    <div class="flex flex-col items-center gap-10">
        <div class="w-px h-20 bg-gradient-to-b from-zen-gold/40 to-transparent">
        </div>
        <span
            class="vertical-rl text-[8px] font-bold tracking-[0.4em] text-zen-gold opacity-40 uppercase"
            >Aesthetic</span
        >
    </div>
</header>

<!-- Mobile Navigation (Minimalist Bar) -->
<nav
    class="md:hidden fixed bottom-8 left-1/2 -translate-x-1/2 z-50 w-[85%] bg-white/90 backdrop-blur-lg px-8 py-5 flex items-center justify-around border border-zen-border shadow-2xl"
>
    {
        links.map((link) => (
            <a
                href={link.href}
                class="text-[11px] font-bold tracking-[0.2em] text-zen-dim hover:text-zen-gold transition-colors"
            >
                {link.name}
            </a>
        ))
    }
    <div class="sig-mark !pl-4 !py-0">A</div>
</nav>
