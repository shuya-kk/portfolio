---
const links = [
    { name: "APPS", href: "/portfolio/#apps" },
    { name: "BLOG", href: "/portfolio/blog" },
    { name: "ABOUT ME", href: "/portfolio/#about" },
];
---

<header
    class="fixed top-0 left-0 right-0 z-50 bg-background/90 backdrop-blur-md border-b border-border transition-colors duration-300"
>
    <div class="container-custom h-20 flex items-center justify-between">
        <a
            href="/portfolio/"
            class="text-primary hover:text-accent transition-colors"
        >
            <svg
                class="w-6 h-6"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                ><path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
                ></path></svg
            >
        </a>

        <div class="flex items-center gap-8">
            <nav class="flex items-center gap-8">
                {
                    links.map((link) => (
                        <a
                            href={link.href}
                            class="text-sm font-bold text-secondary hover:text-primary transition-colors tracking-wide"
                        >
                            {link.name}
                        </a>
                    ))
                }
            </nav>
        </div>
    </div>
</header>

<!-- Spacer to push content below navbar -->
<div class="h-16"></div>
