<div
    class="absolute inset-0 overflow-hidden pointer-events-none select-none z-0"
>
    <!-- Base Honeycomb Pattern -->
    <div class="absolute inset-0 bg-honeycomb opacity-30"></div>

    <!-- Floating Hexagons -->
    <div
        class="absolute top-1/4 left-10 w-32 h-32 bg-custom-highlight/10 backdrop-blur-sm rounded-3xl rotate-12 animate-float"
        style="clip-path: polygon(25% 0%, 75% 0%, 100% 50%, 75% 100%, 25% 100%, 0% 50%);"
    >
    </div>
    <div
        class="absolute bottom-1/3 right-10 w-48 h-48 bg-custom-tertiary/10 backdrop-blur-sm rounded-3xl -rotate-12 animate-float"
        style="animation-delay: 1.5s; clip-path: polygon(25% 0%, 75% 0%, 100% 50%, 75% 100%, 25% 100%, 0% 50%);"
    >
    </div>
    <div
        class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-96 h-96 bg-custom-highlight/5 rounded-full blur-3xl"
    >
    </div>
</div>
