---
// コレクションのインポートと型定義
import type { CollectionEntry } from "astro:content";
import { getCollection } from "astro:content";
import Navbar from "../../../components/Navbar.astro";
import Footer from "../../../components/Footer.astro";
import BlogCard from "../../../components/BlogCard.astro";
import CanvasBackground from "../../../components/CanvasBackground.astro";

// Propsの型を定義
type Props = {
    // postは実際には使わないが、paramsのtagを使用
    posts: CollectionEntry<"blog">[];
    tag: string;
};

// 1. 動的ルーティングのパスを生成 (SSG: 静的生成)
export async function getStaticPaths() {
    const allPosts = await getCollection("blog");

    // すべてのタグを重複なく集める
    const uniqueTags = new Set<string>();
    allPosts.forEach((post) => {
        post.data.tags?.forEach((tag) => {
            uniqueTags.add(tag);
        });
    });

    // 各タグに対してパスを生成
    return Array.from(uniqueTags).map((tag) => {
        // そのタグに一致する記事をフィルタリング
        const filteredPosts = allPosts.filter((post) =>
            post.data.tags?.includes(tag),
        );

        return {
            params: { tag: tag },
            props: {
                posts: filteredPosts.sort(
                    (a, b) =>
                        b.data.pubDate.getTime() - a.data.pubDate.getTime(),
                ),
                tag: tag,
            },
        };
    });
}

// 2. Propsを取得
const { tag, posts } = Astro.props as Props;
---

<!doctype html>
<html lang="ja" class="scroll-smooth">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <!-- タイトルをタグ名を含むものに設定 -->
        <title>Tag: {tag} | Shuya Komiya</title>
        <link rel="icon" href="/favicon.ico" />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;900&family=JetBrains+Mono:wght@400&display=swap"
            rel="stylesheet"
        />
    </head>
    <body
        class="bg-dark-bg text-text-main font-sans selection:bg-neon-amber selection:text-white overflow-x-hidden"
    >
        <CanvasBackground />
        <Navbar />

        <main class="relative z-10 pt-32 pb-20">
            <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="text-center mb-20 animate-fade-in-up">
                    <p
                        class="text-text-muted text-sm font-mono mb-4 uppercase tracking-wider"
                    >
                        Browsing Tag
                    </p>
                    <h1 class="text-4xl sm:text-6xl font-black tracking-tight">
                        <span class="text-neon-amber">#{tag}</span>
                    </h1>
                </div>

                <div
                    class="text-center mb-12 animate-fade-in-up"
                    style="animation-delay: 0.1s;"
                >
                    <a
                        href="/portfolio/blog"
                        class="inline-flex items-center text-text-muted hover:text-white transition-colors font-mono text-sm group"
                    >
                        <svg
                            class="w-4 h-4 mr-2 group-hover:-translate-x-1 transition-transform"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                            ><path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M10 19l-7-7m0 0l7-7m-7 7h18"></path></svg
                        >
                        Back to All Thoughts
                    </a>
                </div>

                <div
                    class="space-y-8 animate-fade-in-up"
                    style="animation-delay: 0.2s;"
                >
                    {
                        posts.map((post) => (
                            <BlogCard
                                title={post.data.title}
                                date={post.data.pubDate}
                                slug={post.slug}
                                tags={post.data.tags}
                            />
                        ))
                    }
                </div>
            </div>
        </main>

        <Footer />
    </body>
</html>
