---
import appData from "../data/apps.json";
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";
import AppCard from "../components/AppCard.astro";
import BlogCard from "../components/BlogCard.astro";
import SectionHeader from "../components/SectionHeader.astro";

const allPosts = await getCollection("blog");
const sortedPosts = allPosts.sort(
    (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
const latestPosts = sortedPosts.slice(0, 4);

const recentApps = appData.slice(0, 3);
---

<Layout title="Shuya Komiya | Portfolio">
    <section
        id="hero"
        class="min-h-screen flex items-center relative px-8 md:px-16 overflow-hidden"
    >
        <!-- Asymmetrical Layout: Text Right (Vertical), Visual Left -->
        <div
            class="absolute inset-0 z-0 opacity-20 bg-[url('/patterns/seigaiha.svg')] bg-repeat opacity-[0.03]"
        >
        </div>

        <div
            class="w-full h-full flex flex-col-reverse md:flex-row relative z-10"
        >
            <!-- Left: Visual/English Context (Horizontal) -->
            <div
                class="flex-1 flex flex-col justify-end pb-20 md:pb-32 pl-4 md:pl-10"
            >
                <div class="animate-fade-in-up" style="animation-delay: 0.8s;">
                    <p
                        class="text-wafu-text-muted font-sans tracking-widest text-sm mb-2"
                    >
                        iOS DEVELOPER & UI DESIGNER
                    </p>
                    <p
                        class="text-wafu-accent font-serif text-lg tracking-wider"
                    >
                        Shuya Komiya
                    </p>
                </div>
            </div>

            <!-- Right: Main Japanese Copy (Vertical) -->
            <div
                class="flex-1 flex justify-center md:justify-end items-center md:pr-32 py-20 md:py-0"
            >
                <div
                    class="writing-vertical-rl text-orientation-upright font-serif flex gap-8 md:gap-12 h-[60vh] md:h-auto"
                >
                    <!-- Title/Name -->
                    <h1
                        class="text-5xl md:text-7xl font-black text-wafu-text tracking-widest leading-loose animate-fade-in"
                    >
                        <span class="inline-block relative">
                            デ<br />ジ<br />タ<br />ル<br />職<br />人
                            <span
                                class="absolute top-0 right-full w-full h-full border-r border-wafu-accent/30 mr-6"
                            ></span>
                        </span>
                    </h1>

                    <!-- Catchphrase -->
                    <p
                        class="text-xl md:text-2xl text-wafu-text-muted leading-relaxed tracking-widest animate-fade-in-up"
                        style="animation-delay: 0.3s;"
                    >
                        機能美と<br />心地よさを<br />手の中に。
                    </p>

                    <div
                        class="h-32 w-px bg-wafu-accent/20 mt-8 animate-extend-line"
                    >
                    </div>
                </div>
            </div>
        </div>

        <!-- Scroll Indicator -->
        <div class="absolute bottom-10 left-10 md:left-20 animate-bounce-slow">
            <span
                class="writing-vertical-rl text-xs text-wafu-text-muted tracking-widest"
                >スクロール</span
            >
            <div class="h-16 w-px bg-wafu-text/20 mx-auto mt-2"></div>
        </div>
    </section>

    <!-- Apps Section -->
    <section id="apps" class="py-32 relative bg-wafu-paper/50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <SectionHeader title="制作実績" subtitle="Works" />

            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                {
                    recentApps.map((app, index) => (
                        <AppCard
                            name={app.name}
                            description={app.description}
                            iconUrl={app.iconPlaceholder}
                            appStoreUrl={app.appStoreLink}
                            features={app.features}
                            isFeatured={index === 0}
                        />
                    ))
                }
            </div>

            <div class="mt-20 text-center">
                <a
                    href="/portfolio/apps"
                    class="wafu-btn inline-flex items-center px-8 py-3 rounded-sm font-serif tracking-widest text-sm shadow-md"
                >
                    全作品を見る
                </a>
            </div>
        </div>
    </section>

    <!-- Blog Section -->
    <section id="blog" class="py-32 relative">
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
            <SectionHeader title="ブログ" subtitle="Journal" align="center" />

            <div class="mt-16 space-y-8">
                {
                    latestPosts.map((post) => (
                        <BlogCard
                            title={post.data.title}
                            date={post.data.pubDate}
                            slug={post.slug}
                            tags={post.data.tags}
                        />
                    ))
                }
            </div>

            <div class="mt-20 text-center">
                <a
                    href="/portfolio/blog"
                    class="inline-flex items-center px-6 py-3 border border-wafu-text/20 rounded-sm text-sm text-wafu-text hover:bg-wafu-text hover:text-white transition-all duration-300 font-serif tracking-widest"
                >
                    記事一覧
                </a>
            </div>
        </div>
    </section>

    <!-- About Section -->
    <section id="about" class="py-32 relative overflow-hidden bg-wafu-paper/30">
        <div
            class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10 text-center"
        >
            <SectionHeader
                title="プロフィール"
                subtitle="About"
                align="center"
            />

            <div
                class="prose prose-lg mx-auto text-wafu-text-muted leading-loose font-serif max-w-2xl"
            >
                <p>
                    iOSアプリ開発者・UIデザイナー。<br />
                    「使っていて心地よい」インターフェースと、<br />
                    日常に溶け込む機能性を追求しています。
                </p>
                <p class="mt-8 text-sm">Swift / SwiftUI / UI Design</p>
            </div>

            <div class="mt-16">
                <a
                    href="mailto:contact@example.com"
                    class="inline-block px-8 py-4 bg-wafu-text text-white font-serif tracking-widest rounded-sm shadow-lg hover:bg-wafu-accent transition-colors duration-300"
                >
                    お問い合わせ
                </a>
            </div>
        </div>
    </section>
</Layout>
